use predicates as knowledge.
use perceptEvents as module.
use goalEvents as module.


order=linearall.

module events {
	
	if bel(buildableStudent(X,Y)
		,buildableStudentList(Z)
		,not(member(X,Z))) 
			then delete(buildableStudentList(Z)) 
			+ insert(buildableStudentList([X|Z])).
	
	% Processing percepts
	if true then perceptEvents.
	
	% Adopting goals
	if true then goalEvents.

}
