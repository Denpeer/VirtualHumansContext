use actions as actionspec.
use predicates as knowledge.



order=linear.
exit=always.


% Module for when the agent is below the target budget, the agent will sell unused land and low-quality housing if this improves the overall indicator score
module noBudgetMod {
	
	% Search for relevant areas to sell.
	if bel(not(relevant_areas(2,MultiPolygons)))
	then get_relevant_areas(2, "sell", []).
	
	% Sell our least important piece of land to any stakeholder who will buy it.
	if bel(stakeholder(BuyerId,_),
		not(self(BuyerId)),
		relevant_areas(2,MPs),
		member(MP, MPs),
		MP = [MultiPolygon|_],
		not(sell_proposal(_, MultiPolygon)))
	then insert(sell_proposal(BuyerId, MultiPolygon))
		+ map_sell_land(BuyerId, MultiPolygon, 400).
	
	if bel(relevant_areas(2,MultiPolygons))
	then delete(relevant_areas(2,MultiPolygons)).
}
