use "../DUWOtestAgent/DUWOagent" as mas.
use "../DUWOtestAgent/predicates" as knowledge.
use "../DUWOtestAgent/normalMod"as module.
use "../DUWOtestAgent/lowBudgetMod"as module.
use "../DUWOtestAgent/noBudgetMod"as module.
use "../DUWOtestAgent/DUWO"as module.
use "../DUWOtestAgent/actions" as actionspec.
use "../DUWOtestAgent/events" as module.
use "../DUWOtestAgent/goalEvents" as module.
use "../DUWOtestAgent/perceptEvents" as module.

timeout = 5.

test testLowBudgetModule with
	pre {
		true
	}
	in {
		%simulate a percept that indicates that the budget is beneath 120% of our target budget
		percept(indicators([indicator(7,11,10),indicator(2,0,0)])) 
		%this should trigger the lowbudget predicate
				leadsto bel(lowBudget).
			eventually bel(lowBudget).
	}
	post {
		not(bel(needStudentHousing)),
		%percepts from the tygron environment keep sending so the lowbudget predicate wil be false again.
		not(bel(lowBudget)),
		not(bel(noBudget)),
		not(goal(goalBuildStudentHousing))
		
	}



DUWOAgent {
	do DUWO.
	
}